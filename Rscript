# Bandwidths
bandwidths <- c(100, 75, 50, 25)

# 1. Means and group sizes by Mita and bandwidth
tabla_means_cacique <- map_dfr(bandwidths, function(bw) {
  budget %>%
    filter(d_bnd <= bw) %>%
    group_by(pothuan_mita) %>%
    summarise(
      bandwidth = paste0("<", bw, " km"),
