  }, silent = TRUE)
  
  tibble(
    bandwidth = paste0("<", bw, " km"),
    robust_se = robust_se,
    conley_se = conley_se
  )
})

# 3. Merge and format
tabla_final_cacique <- tabla_means_cacique %>%
  pivot_wider(names_from = pothuan_mita, values_from = c(mean, n)) %>%
